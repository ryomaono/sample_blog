<% @tweets.each do |tweet| %>
   <div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p><%= tweet.text %></p>
      </div>
      <div class="card-action">
        <%= link_to "SHOW", "/tweets/#{tweet.id}", class: "waves-effect waves-light btn" %>
        <%= link_to "EDIT", "/tweets/#{tweet.id}/edit", class: "waves-effect waves-light btn" %>
        <%= link_to "DELETE", "/tweets/#{tweet.id}", method: :delete, class: "waves-effect waves-light btn" %>
      </div>
    </div>
  </div>
</div>
  <% end %>
  <%= paginate(@tweets) %>
